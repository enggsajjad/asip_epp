<!DOCTYPE ConfigFile SYSTEM "config.dtd">

<ConfigFile>


<!-- These information are used by the SI Predictor, not by the RotationManager -->
	<CostPerAtom>
		100000
	</CostPerAtom>
	<FDFParameter>
		<endMultiplier>
			6
		</endMultiplier>
		<aFactor>
			1.0
		</aFactor>
		<cFactor>
			1.0
		</cFactor>
	</FDFParameter>
<!-- end: SI Predictor -->

	<Atoms>
		<Atom name="atom_SAD4" description="SAD-H264"/>
		
		<Atom name="atom_QuadSub" description="Four_Subtractions-H264"/>
		<Atom name="atom_PackLSBMSB" description="PackLSBMSB-H264"/>
		<Atom name="atom_Transform" description="Transform-H264"/>
		<Atom name="atom_SATD" description="Absolute_Sum_of_HT_values-H264"/>
		
		<Atom name="atom_BytePack" description="Funnel_Shifter_4_Alignment-H264"/>
		<Atom name="atom_PointFilter" description="Six-Tap_Filter_One-Pixel-H264"/>
		<Atom name="atom_Clip3" description="Clip_input_between_minmax-H264"/>
			
		<Atom name="atom_CollapseAdd" description="Add_4_Bytes_of_a_Register-H264"/>
		<Atom name="atom_PackLBytes" description="Pack_Lower_Byte_of_4_Registers-H264"/>
		
		<Atom name="atom_Cond" description="ConditionEvaluation for Loop-Filter-H264"/>
		<Atom name="atom_LF" description="Filter for Loop-Filter BS4-H264"/>
	</Atoms>

