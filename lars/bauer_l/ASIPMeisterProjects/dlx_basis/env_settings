#!/bin/bash

# This is the name of the subdirectory of ASIPMeisterProjects.
export PROJECT_NAME=dlx_basis

# This is the prefix for the compiler name.
# The real compiler name will get a "cc" attached.
# You have to use a different compiler prefix for every project!
#export COMPILER_PREFIX=basisSinasDev	# Supports: Sinas + mac + mad + fex + avg + avgu
#export COMPILER_PREFIX=basisSinas	# Supports: Sinas + mac + mad + fex + avg + avgu
export COMPILER_PREFIX=basisSinasOpt
	# Supports: Sinas + mac + mad + fex + avg + avgu + swap
#export COMPILER_PREFIX=stackCallingConv	# Supports: Sinas + mac + mad + fex + avg + avgu + swap
#export COMPILER_PREFIX=dlx_integer_	# Original Compiler Binary from Osaka


###############################
###  Seldom changed values  ###
###############################

export ASIPMEISTER_PROJECTS_DIR=${HOME}/ASIPMeisterProjects

export PROJECT_DIR=${ASIPMEISTER_PROJECTS_DIR}/${PROJECT_NAME}

# The name of ASIP Meisters *.pdb file.
# It is expected, that a directory "$MEISTER_DIR/$CPU_NAME.syn" exists!
export CPU_NAME=dlx_basis

export MEISTER_DIR=${PROJECT_DIR}/meister

export MODELSIM_DIR=${PROJECT_DIR}/ModelSim

export ISE_DIR=${PROJECT_DIR}/ISE_basis_6000

export MKIMG_DIR=/Software/epp/mkimg

export DLXSIM_DIR=/Software/epp/dlxsim

export POWER_DIR=/Software/epp/PowerEstimation

export COSY_DIR=/Software/epp/CoSy

export COMPILER_NAME=${COMPILER_PREFIX}cc

